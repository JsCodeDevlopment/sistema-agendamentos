{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"files": {
		"ignore": [".next", ".git", "dist", "node_modules"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"useAwait": "warn"
			},
			"correctness": {
				"noUnusedImports": "warn"
			},
			"style": {
				"useConsistentArrayType": "warn",
				"useFilenamingConvention": {
					"level": "warn",
					"options": {
						"filenameCases": ["camelCase", "PascalCase", "kebab-case"]
					}
				}
			}
		}
	}
}
